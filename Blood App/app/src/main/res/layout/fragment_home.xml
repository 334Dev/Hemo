<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Welcome to Hemo"
        android:textColor="@color/Text"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@color/background"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <ImageView
            android:id="@+id/CampaignBanner"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@color/background"
            android:src="@drawable/email_vector" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:id="@+id/HomemakeRequest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@drawable/primary_outline_textbox"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageViewMakeRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_content_paste_24" />

            <TextView
                android:id="@+id/textViewMakeRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="12dp"
                android:text="Make a Request"
                android:textColor="@color/Text"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/NewAppontment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@drawable/primary_outline_textbox"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageViewNewAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_assignment_turned_in_24" />

            <TextView
                android:id="@+id/textViewNewAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="12dp"
                android:text="Schedule New Appointment"
                android:textColor="@color/Text"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BloodBankFind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@drawable/primary_outline_textbox"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageViewBloodBankFind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_map_24" />

            <TextView
                android:id="@+id/textViewBloodBankFind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="12dp"
                android:text="Find Blood Bank"
                android:textColor="@color/Text"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eligiblityText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@drawable/primary_outline_textbox"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageViewEligiblityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_info_24" />

            <TextView
                android:id="@+id/textViewEligiblityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="12dp"
                android:text="Test your Eligibility"
                android:textColor="@color/Text"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>